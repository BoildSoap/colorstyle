<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Colorstylesproject" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#9fa8da</item>
        <item name="colorPrimaryVariant">#d1d9ff</item>
        <item name="colorOnPrimary">#6f79a8</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#c3c9e8</item>
        <item name="colorSecondaryVariant">#f6fcff</item>
        <item name="colorOnSecondary">#9298b6</item>
        <item name="font">@font/lobster</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="EditTextStyle" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">@dimen/inputTextWidth</item>
        <item name="android:layout_height">@dimen/inputTextHeight</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/marginLength</item>
        <item name="android:height">@dimen/inputTextHeight</item>
        <item name="android:background">@color/primaryLightColor</item>
        <item name="android:ems">10</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ButtonStyle" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">@dimen/buttonWidth</item>
        <item name="android:layout_height">@dimen/buttonHeight</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/marginLength</item>
        <item name="android:height">@dimen/inputTextHeight</item>
        <item name="android:background">@color/primaryLightColor</item>
        <item name="android:ems">10</item>
        <item name="android:gravity">center</item>
    </style>

</resources>